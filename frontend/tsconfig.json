{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "workflows-lib": ["node_modules/workflows-lib/dist"],
      "workflows-lib/*": ["node_modules/workflows-lib/dist/*"]
    },
    "jsx": "react-jsx",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["node_modules"]
}
